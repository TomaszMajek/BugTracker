@model BugTracker.Models.TicketModel

@{
    ViewData["Title"] = "EditBug";
}

<div class="row pt-4 justify-content-between">
    <div class="d-flex bd-highlight">
        <div class="flex-grow-1 bd-highlight">
            <h3>Edit ticket</h3>
        </div>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBug">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pt-3">
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <label asp-for="BugName" class="control-label"></label>
                <input asp-for="BugName" class="form-control" />
                <span asp-validation-for="BugName" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <label asp-for="Reporter" class="control-label"></label>
                <input asp-for="Reporter" class="form-control" readonly />
                <span asp-validation-for="Reporter" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" readonly />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" type="date" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-select">
                    <option value="">Choose status</option>
                    <option value="Open">Open</option>
                    <option value="In progress">In progress</option>
                    <option value="To do">To do</option>
                    <option value="To be tested">To be tested</option>
                    <option value="Closed">Closed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group pt-3">
                <label asp-for="Severity" class="control-label"></label>
                <input asp-for="Severity" class="form-control" />
                <span asp-validation-for="Severity" class="text-danger"></span>
            </div>
            <div class="form-group pt-3 pb-3">
                <div class="position-relative pt-3 pb-3">
                    <div class="position-absolute top-0 start-0">
                        <a class="btn btn-secondary" asp-action="ViewTickets">Cancel</a>
                    </div>
                    <div class="position-absolute top-0 end-0">
                        <input type="submit" value="Save edits" asp-action="EditSaveBug" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

